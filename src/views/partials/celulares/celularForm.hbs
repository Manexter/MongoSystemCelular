<div class="card card-body p-4 rounded-0 bg-dark text-white">
    <h4>AGREGAR CELULAR</h4>
    <form action="/celular/agregar" method="POST">
        <div>
            <label for="clave">Clave:</label>
            <input type="text" name="clave" placeholder="Clave" id="clave"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="marca">Marca:</label>
            <input type="text" name="marca" placeholder="Marca" id="marca"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="precio">Precio:</label>
            <input type="text" name="precio" placeholder="Precio" id="precio"
            class="form-control bg-dark text-white"/>
        </div>
    
        <div>
            <label for="fechaLanzamiento">Fecha de lanzamiento:</label>
            <input type="date" name="fechaLanzamiento" id="fechaLanzamiento"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="RAM">RAM:</label>
            <input type="text" name="RAM" placeholder="RAM" id="RAM"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="almacenamiento">Almacenamiento:</label>
            <input type="text" name="almacenamiento" placeholder="Almacenamiento" id="almacenamiento" 
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="cantCamaras">Cantidad de camaras:</label>
            <input type="text" name="cantCamaras" placeholder="CantCamaras" id="cantCamaras" 
            class="form-control bg-dark text-white"/>
        </div>
        <button class="btn btn-success btn-sm mt-2">Agregar</button> 
    </form>
</div>